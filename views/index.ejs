<!DOCTYPE html>
<html>

<head>
    <title>Points</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
</head>

<body>
    <h1>Points</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>X</th>
                <th>Y</th>
            </tr>
        </thead>
        <tbody>
            <% points.forEach(point=> { %>
                <tr onclick="window.location='/edit/<%= point.id %>'">
                    <td>
                        <%= point.name %>
                    </td>
                    <td>
                        <%= point.x %>
                    </td>
                    <td>
                        <%= point.y %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <a href="/add">Add New Point</a>
</body>

</html>